<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        
        <RelativeLayout
            android:id="@+id/map_title_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bar"
            >

            <TextView
                android:id="@+id/map_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                />
            
            <Button
                android:id="@+id/map_search_btn"
                android:layout_width="13.8dp"
                android:layout_height="14.5dp"
                android:background="@drawable/btn_search"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.2dp"
                />
            
            <EditText
                android:id="@+id/map_search_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map_title_layout"
            >

        </RelativeLayout>

        <Button
            android:id="@+id/map_gps_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_gps"
            android:layout_alignParentRight="true"
            android:layout_marginTop="71dp"
            android:layout_marginRight="5dp"
            />


        <Button
            android:id="@+id/map_refresh_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_refresh"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/map_gps_btn"
            android:layout_marginTop="-15dp"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>
</FrameLayout>