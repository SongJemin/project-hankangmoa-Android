<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:background="#000000">

            <ImageView
                android:id="@+id/detail_btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5dp"
                android:layout_marginTop="14.5dp"
                android:src="@drawable/btn_menu" />

            <ImageView
                android:id="@+id/detail_btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="323dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/btn_share" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="38dp"
                android:src="@drawable/img_category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="69dp"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="3sp"
                android:text="한강 다리밑 영화제"
                android:textColor="#ffffff"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200.1dp"
                android:layout_marginTop="96.8dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="2sp"
                android:text="3.5"
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_festival_summary"
            android:layout_width="332dp"
            android:layout_height="181dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="193dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="16dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="2sp"
                android:text="행사개요"
                android:textColor="#6b7fa1"
                android:textSize="15sp" />

            <View
                android:layout_width="296dp"
                android:layout_height="0.5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43.5dp"
                android:background="#b9b9b9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginTop="68dp"
                android:text="날 짜"
                android:textColor="#484848"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="89dp"
                android:layout_marginTop="68dp"
                android:text="2018.07.21(금) ~ 08.18(일)"
                android:textColor="#484848"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginTop="87dp"
                android:text="시 간"
                android:textColor="#484848"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="89dp"
                android:layout_marginTop="87dp"
                android:text="매주 토요일 20:00 ~ 22:00"
                android:textColor="#484848"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginTop="105dp"
                android:text="장 소"
                android:textColor="#484848"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="89dp"
                android:layout_marginTop="105dp"
                android:layout_marginEnd="24dp"
                android:text="망원 서울함 공원, 여의도 원효대교 남단 하부, 뚝섬 청담대교 북단 하부, 광나루 천호대교 남단 하부"
                android:textColor="#484848"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_reserve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="356dp"
                android:src="@drawable/btn_reserve"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="2sp"
                android:gravity="center_horizontal"
                android:text="예약하기"
                />






        </RelativeLayout>



        <ImageView
            android:id="@+id/btn_heart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/layout_festival_summary"
            android:layout_alignTop="@+id/layout_festival_summary"
            android:layout_marginTop="-25dp"
            android:src="@drawable/btn_heart" />
    </RelativeLayout>

</ScrollView>